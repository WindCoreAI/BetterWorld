{
  "name": "@betterworld/root",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:integration": "turbo test:integration",
    "db:generate": "pnpm --filter @betterworld/db db:generate",
    "db:migrate": "pnpm --filter @betterworld/db db:migrate",
    "db:push": "pnpm --filter @betterworld/db db:push",
    "db:seed": "pnpm --filter @betterworld/db db:seed",
    "db:studio": "pnpm --filter @betterworld/db db:studio"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.7"
    }
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "@typescript-eslint/parser": "^8.22.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "prettier": "^3.4.2"
  }
}
