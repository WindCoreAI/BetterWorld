{
  "name": "@betterworld/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:worker": "tsx watch src/workers/guardrail-worker.ts",
    "dev:worker:evidence": "tsx watch src/workers/evidence-verification.ts",
    "dev:worker:fraud": "tsx watch src/workers/fraud-scoring.ts",
    "dev:worker:reputation-decay": "tsx watch src/workers/reputation-decay.ts",
    "dev:worker:metrics": "tsx watch src/workers/metrics-aggregation.ts",
    "dev:ws": "tsx watch src/ws/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts --passWithNoTests"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@betterworld/db": "workspace:*",
    "@betterworld/guardrails": "workspace:*",
    "@betterworld/shared": "workspace:*",
    "@hono/node-server": "^1.13.8",
    "@hono/node-ws": "^1.3.0",
    "@hono/zod-validator": "^0.7.6",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.67.3",
    "drizzle-orm": "^0.38.4",
    "exifr": "^7.1.3",
    "hono": "^4.7.4",
    "ioredis": "^5.4.2",
    "jose": "^6.0.10",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5",
    "resend": "^6.9.1",
    "sharp": "^0.34.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.12.0",
    "@types/sharp": "^0.32.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^3.0.5",
    "ws": "^8.19.0"
  }
}
